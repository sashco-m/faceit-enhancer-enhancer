{
  "include": ["./src/**/*.ts", "./src/**/*.vue",],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "load_me/js",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "typeRoots": [ "node_modules/@types" ],
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
}