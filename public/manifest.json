{
    "manifest_version": 3,
    "name": "sashco-faceit-improved",
    "version": "1.0",
    "description": "Display user stats in the faceit match page, among other QOL improvements.",
    "permissions": [
        "activeTab",
        "scripting"
     ], 
    "action":{},
    "icons": {
        "16": "images/faceit-extension-16.png",
        "32": "images/faceit-extension-32.png",
        "48": "images/faceit-extension-48.png",
        "128": "images/faceit-extension-128.png"
      },
    "content_scripts": [
        {
            "matches": ["https://www.faceit.com/en/csgo/room/*"],
            "js": ["content.js"]
        },
        {
            "matches": ["https://www.faceit.com/en/csgo/room/*"],
            "run_at":"document_start",
            "world": "MAIN",
            "js": ["embed.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
     }
}